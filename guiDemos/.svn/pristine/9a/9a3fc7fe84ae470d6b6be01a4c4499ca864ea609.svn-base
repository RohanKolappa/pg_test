
.row, .col { 
	overflow: hidden; 
	position: absolute; 
}

.row { 
	left: 0; 
	right: 0; 
}

.col { 
	top: 0;
	bottom: 0;
}

.scroll-x { 
	overflow-x: auto; 
}

.scroll-y { 
	overflow-y: auto; 
}

.header.row { 
	height: 80px; 
	top: 0;
	color: #666;
	background: #7b8081;
  	background-image: -webkit-linear-gradient(top, #7b8081, #686b6e);
  	background-image: -moz-linear-gradient(top, #7b8081, #686b6e);
  	background-image: -ms-linear-gradient(top, #7b8081, #686b6e);
  	background-image: -o-linear-gradient(top, #7b8081, #686b6e);
  	background-image: linear-gradient(to bottom, #7b8081, #686b6e);
	-webkit-box-shadow: 0px 3px 4px 0px rgba(0,0,0,0.18);
	-moz-box-shadow: 0px 3px 4px 0px rgba(0,0,0,0.18);
	box-shadow: 0px 3px 4px 0px rgba(0,0,0,0.18);
	z-index: 9999;
}

.body.row { 
	top: 80px; 
	bottom: 80px;
	background: #f1f1f1;
}

.left.col { 
	width: 320px; 
	background: #e1e1e1;
	overflow-y:auto;
}

.center.col {
	left: 330px;   /* This should equal the width of the left.col (above) */
	right: 0px;
	overflow:auto;
}

.right.col { 
	width: 250px; 
	right: 0px;
}

.footer.row { 
	height: 80px; 
	bottom: 0; 
}

@media (max-height: 880px) {
	.footer.row {
		 opacity: 0; 
	}
	.body.row {
		top:40px;
		bottom: 10px;
	}
	.header.row {
		height: 40px;
	}

}

.pad10 {
	padding:10px;
}
.pad20 {
	padding:20px;
}
.mar10 {
	margin:10px;
}
.mar20 {
	margin:20px;
}


.player-container {
	overflow: hidden; 
	position: absolute; 
	top: 0;
	bottom: 60px;
	background:#000;

}
.player-controller {
	overflow: hidden;
	position: absolute;
	bottom: 0;
	height:60px;
	background: #444;
}

.fullscreen {
	z-index:99999;
	overflow: hidden; 
	position: absolute; 
 
	left: 0; 
	right: 0; 

	top: 0;
	bottom: 0;

}