<?xml version="1.0" encoding="UTF-8"?>
<NotificationHandler>
<!-- NAS Notifications -->
	<Notification>
		<NotificationType>SystemNotification</NotificationType>
		<EventSourceList>
			<EventSource>NAS</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>Mount</Type>
			<Type>Unmount</Type>
			<Type>Online</Type>
			<Type>Offline</Type>
			<Type>Error</Type>
			<Type>Delete</Type>
		</EventTypeList>
		<MediaRoomEvent>SystemEvent</MediaRoomEvent>
		<MediaRoomEventXMLPath>/com/ipvs/mediaroomservice/impl/SystemEventInstance.xml</MediaRoomEventXMLPath>
		<ServiceList>
			<Service>MediaStoreAdmin</Service>
		</ServiceList>
	</Notification>
	<Notification>
		<NotificationType>SystemNotification</NotificationType>
		<EventSourceList>
			<EventSource>HA</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>OnOffSecondary</Type>			
		</EventTypeList>
		<MediaRoomEvent>SystemEvent</MediaRoomEvent>
		<MediaRoomEventXMLPath>/com/ipvs/mediaroomservice/impl/SystemEventInstance.xml</MediaRoomEventXMLPath>
		<ServiceList>
			<Service>Config</Service>
		</ServiceList>
	</Notification>
	<!-- Deleter Port Notification. Received On Delete of file from trash dir -->
	<Notification>
		<NotificationType>SSNotification</NotificationType>
		<EventSourceList>
			<EventSource>Progress</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>DeleterPort</Type>
		</EventTypeList>
		<MediaRoomEvent>SSEvent</MediaRoomEvent>
		<MediaRoomEventXMLPath>/com/ipvs/mediaroomservice/impl/SSEventInstance.xml</MediaRoomEventXMLPath>
		<ServiceList>
			<Service>MediaStoreAdmin</Service>
		</ServiceList>
	</Notification>
	
	<!-- Deleter Port Notification. Received On Delete of file from trash dir -->
	<Notification>
		<NotificationType>SSNotification</NotificationType>
		<EventSourceList>
			<EventSource>Progress</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>DMSRecorderPort</Type>
		</EventTypeList>
		<DataXPathList>
		  <XPath>//Data/MediaStatus='Stopped'</XPath>
		  <XPath>//Data/Status='Stopped'</XPath>
		  <XPath>//Data/Status='Error Stopped'</XPath>
		</DataXPathList>
		<MediaRoomEvent>SSEvent</MediaRoomEvent>
		<MediaRoomEventXMLPath>/com/ipvs/mediaroomservice/impl/SSEventInstance.xml</MediaRoomEventXMLPath>
		<ServiceList>
			<Service>Media</Service>
			<Service>MediaStoreAdmin</Service>
		</ServiceList>
	</Notification>
	
	<!-- Disk full notification. Received when the disk reaches threshold -->
	<Notification>
		<NotificationType>SSNotification</NotificationType>
		<EventSourceList>
			<EventSource>Progress</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>DMSRecorderPort</Type>
		</EventTypeList>
		<DataXPathList>
		  <XPath>//Data/MediaStatus='Started'</XPath>		  		  
		</DataXPathList>
		<MediaRoomEvent>SSEvent</MediaRoomEvent>
		<MediaRoomEventXMLPath>/com/ipvs/mediaroomservice/impl/SSEventInstance.xml</MediaRoomEventXMLPath>
		<ServiceList>
			<Service>MediaStoreAdmin</Service>
		</ServiceList>
	</Notification>
	
	
	<!-- Started and Stopped Event from Streaming Server - Ports (V2DEncoderPort,V2DDecoderPort) -->
	<Notification>
		<NotificationType>SSNotification</NotificationType>
		<EventSourceList>
			<EventSource>Started</EventSource>
			<EventSource>Stopped</EventSource>
			<EventSource>Connected Started</EventSource>
			<EventSource>Connected Stopped</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>V2DDecoderPort</Type>
			<Type>RTPDecoderPort</Type>
			<Type>UDPDecoderPort</Type>
			<Type>MPEGTSDecoderPort</Type>
			<Type>DMSRecorderPort</Type>
		</EventTypeList>
		<MediaRoomEvent>SSEvent</MediaRoomEvent>
		<MediaRoomEventXML>
			<MediaRoomEventXMLPath>/com/ipvs/mediaroomservice/impl/SSEventInstance.xml</MediaRoomEventXMLPath>
		</MediaRoomEventXML>
		<ServiceList>
			<Service>Media</Service>
		</ServiceList>
	</Notification>
	
	<!-- Stopped Event from Streaming Server - Ports (V2DHardWarePort) -->
	<Notification>
		<NotificationType>SSNotification</NotificationType>
		<EventSourceList>
			<EventSource>Stopped</EventSource>			
		</EventSourceList>
		<EventTypeList>
			<Type>V2DHardWarePort</Type>		
		</EventTypeList>
		<MediaRoomEvent>SSEvent</MediaRoomEvent>
		<MediaRoomEventXML>
			<MediaRoomEventXMLPath>/com/ipvs/mediaroomservice/impl/SSEventInstance.xml</MediaRoomEventXMLPath>
		</MediaRoomEventXML>
		<ServiceList>
			<Service>Media</Service>
		</ServiceList>
	</Notification>
	 
