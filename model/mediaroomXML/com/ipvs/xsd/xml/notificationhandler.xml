	<!-- Disconnected Event from Streaming Server - Ports (V2DNetworkPort) -->
	<Notification>
		<NotificationType>SSNotification</NotificationType>
		<EventSourceList>
			<EventSource>Disconnected</EventSource>
			<EventSource>Connected</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>V2DNetworkPort</Type>
		</EventTypeList>
		<MediaRoomEvent>SSEvent</MediaRoomEvent>
		<MediaRoomEventXMLPath>/com/ipvs/mediaroomservice/impl/SSEventInstance.xml</MediaRoomEventXMLPath>
		<ServiceList>
			<Service>Media</Service>
		</ServiceList>
	</Notification>	
	<!-- End of Media Event from Streaming Server - Ports (DMSMediaPort) -->
	<Notification>
		<NotificationType>SSNotification</NotificationType>
		<EventSourceList>
			<EventSource>EndOfMedia</EventSource>
			<EventSource>Error</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>DMSMediaPort</Type>
		</EventTypeList>
		<MediaRoomEvent>SSEvent</MediaRoomEvent>
		<MediaRoomEventXMLPath>/com/ipvs/mediaroomservice/impl/SSEventInstance.xml</MediaRoomEventXMLPath>
		<ServiceList>
			<Service>Media</Service>
		</ServiceList>
	</Notification>
	<!-- Errors notification from Streaming Server - Ports (DMSRecordPort) -->
	<Notification>
		<NotificationType>SSNotification</NotificationType>
		<EventSourceList>
			<EventSource>Error</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>DMSRecorderPort</Type>
		</EventTypeList>
		<MediaRoomEvent>SSEvent</MediaRoomEvent>
		<MediaRoomEventXMLPath>/com/ipvs/mediaroomservice/impl/SSEventInstance.xml</MediaRoomEventXMLPath>
		<ServiceList>
			<Service>Media</Service>
		</ServiceList>
	</Notification>
	
	<!-- file tar untar -->
	<Notification>
		<NotificationType>SystemNotification</NotificationType>
		<EventSourceList>
			<EventSource>MediaFileConverter</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>MediaFilePackComplete</Type>
			<Type>MediaFileUnPackComplete</Type>
			<Type>Media2dot4FileUnPackComplete</Type>
			<Type>MediaFilePackError</Type>
			<Type>MediaFileUnPackError</Type>
			<Type>Media2dot4FileUnPackError</Type>
		</EventTypeList>
		<MediaRoomEvent>MediaFileConverterEvent</MediaRoomEvent>
		<MediaRoomEventXMLPath>/com/ipvs/assetadminservice/impl/MediaFileConverterEventInstance.xml</MediaRoomEventXMLPath>
		<ServiceList>
			<Service>MediaStoreAdmin</Service>
		</ServiceList>
	</Notification>
	
	<!-- NFS Upload -->
	<Notification>
		<NotificationType>SystemNotification</NotificationType>
		<EventSourceList>
			<EventSource>NfsUpload</EventSource>
		</EventSourceList>
		<EventTypeList>
			<Type>NfsUploadComplete</Type>
			<Type>NfsUploadError</Type>
		</EventTypeList>
		<MediaRoomEvent>NfsUploadEvent</MediaRoomEvent>
		<MediaRoomEventXMLPath>/com/ipvs/assetadminservice/impl/NfsUploadEventInstance.xml</MediaRoomEventXMLPath>
		<ServiceList>
			<Service>MediaStoreAdmin</Service>
		</ServiceList>
	</Notification>	
</NotificationHandler>