const DL::TypeCPtr & Crypto::CFB::getClassType() {

	static DL::TypeCPtr i = new DL::Type(
		UUId( "5db22156-f9bc-4e76-91ce-c10306201ecd" ),
		"BFC.Crypto.CFB",
		Crypto::Mode::getClassType(),
		new DL::Descr(
			"cfb",
			"Mode",
			"CFB Mode" ) );

	return i;

}

// ============================================================================

Crypto::CFB::CFB() :

	Mode( getClassType() ) {

}

// ============================================================================

void Crypto::CFB::init(
		CipherPtr	pCipher,
	const	Buffer &	pIV,
	const	Buffer &	pKey ) {

	pCipher->setKey( pKey );
	pCipher->encrypt( pIV, IV );

	cipher	= pCipher;
	blkSze	= pCipher->getBlockSize();

}

void Crypto::CFB::done() {

	if ( ! cipher ) {
		throw NotInitialized();
	}

	cipher.kill();

}

// ============================================================================

Buffer Crypto::CFB::encrypt(
	const	Buffer &	pPlainText ) {

	if ( ! cipher ) {
		throw NotInitialized();
	}

	Uint32		len = pPlainText.getLength();

	if ( len % blkSze ) {
		throw InvalidArgument();
	}

	Buffer	ct;

	ct.resize( len );

	Buffer	ctTmp;

	for ( Uint32 i = 0 ; i < len ; i += blkSze ) {
		ctTmp = pPlainText( i, blkSze ) ^ IV;
		ct.overwrite( i, ctTmp );
		cipher->encrypt( ctTmp, IV );
	}

	return ct;

}

Buffer Crypto::CFB::decrypt(
	const	Buffer &	pCipherText ) {

	if ( ! cipher ) {
		throw NotInitialized();
	}

	Uint32	len = pCipherText.getLength();

	if ( len % blkSze ) {
		throw InvalidArgument();
	}

	Buffer	pt;

	pt.resize( len );

	for ( Uint32 i = 0 ; i < len ; i += blkSze ) {
		tmpBuf = pCipherText( i, blkSze );
		pt.overwrite( i, tmpBuf ^ IV );
		cipher->encrypt( tmpBuf, IV );
	}

	return pt;

}

// ============================================================================

Buffer Crypto::CFB::getiv() const {

	if ( ! cipher ) {
		throw NotInitialized();
	}

	return IV;

}

void Crypto::CFB::setiv(
	const	Buffer &	pIV ) {

	if ( ! cipher ) {
		throw NotInitialized();
	}

	if ( pIV.getLength() != blkSze ) {
		throw InvalidArgument();
	}
		
	cipher->encrypt( pIV, IV );

}

