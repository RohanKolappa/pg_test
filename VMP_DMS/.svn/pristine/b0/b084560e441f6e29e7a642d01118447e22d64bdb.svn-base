CTAGS-FILE		:=	tags

JBS_CTAGS-APP	:=	ctags

ifdef JBS_AUTO_REBUILD_TAGS
JBS_AUTO-REBUILD-TAGS	:=	$(JBS_AUTO_REBUILD_TAGS)
else
JBS_AUTO-REBUILD-TAGS	:=	0
endif

.PHONY : JBS_AUTO-REBUILD-TAGS

export JBS_AUTO-REBUILD-TAGS

###############################################################################

ifeq "$(target-type)" "none"

local-tag :

else

ifeq "$(call mod-utils-check-on, $(JBS_AUTO-REBUILD-TAGS))" "true"
local-target : $(CTAGS-FILE)
endif

DISTCLEAN-FILES		+= $(CTAGS-FILE)

mod-tag-needed-deps-files	:=	$(foreach				\
								d,				\
								$(build-needed-deps),		\
								$($(d)-linkdir)/$(CTAGS-FILE))

local-tag : $(mod-tag-needed-deps-files) $(CTAGS-FILE)

$(mod-tag-needed-deps-files) :
	@$(MAKE) $(make-recurse-opt) -C $(dir $@) local-tag

tag-files		:= $(strip $(compile-final-sources) $(compile-final-csources) $(compile-final-headers))

ifneq "$(tag-files)" ""

$(CTAGS-FILE) : $(tag-files)
	@$(call mod-echo-tag,$(target-name) [$(JBS_REL_DIR)])
	@$(JBS_CTAGS-APP) -f $(CTAGS-FILE) $^

else

$(CTAGS-FILE) :

endif

endif

.PHONY: local-tag tag $(mod-tag-needed-deps-files)

###############################################################################

