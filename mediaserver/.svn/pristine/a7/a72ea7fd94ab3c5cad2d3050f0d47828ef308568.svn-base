# Source common library
. /etc/scripts/common.rc

set -e

if [ -z "$1" ] || [ -z "$2" ] ; then
	logprint "ifplugd.action: Wrong arguments" 
	exit 1
fi

# If DHCP is enabled, tell udhcpc to renew the lease otherwise do  
# nothing, i.e. we'll keep the IP address if it's static
# Question: what about link local address?
if [ "$2" = "up" ] ; then 
    logprint "ifplugd.action: Interface $1 Up" 
    if [ -f /tmp/udpcpc.$1 ]; then
        kill -s USR1 `cat /tmp/udpcpc.$1`
    fi
fi

if [ "$2" = "down" ] ; then
    logprint "ifplugd.action: Interface $1 Down" 
fi
exit 1
