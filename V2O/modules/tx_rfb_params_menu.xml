

<Menu>

   <Type>config</Type>
   <Title>TxRFBParameters</Title>
   <Description>Encoder Keyboard/Mouse Server Parameters</Description>
   <Access>tx_rfb_parm</Access>
   <ConfigFile>txrfbconf</ConfigFile>
   <BoardAccess>true</BoardAccess>

   <Items>

      <Item>
        <Name>enable</Name>
        <Type>boolean</Type>
        <Label>Enable</Label>
        <Help>Enable Software keyboard/mouse</Help>
        <FieldLength>8</FieldLength>
        <DefaultValue>No</DefaultValue>
      </Item>


      <Item>
        <Name>ipaddress</Name>
        <Type>string</Type>
        <Label>IP Address</Label>
        <Help>IP Address of Server</Help>
        <FieldLength>32</FieldLength>
        <DefaultValue></DefaultValue>
        <Validation>
           <Type>inetname</Type>
        </Validation>
      </Item>

      <Item>
        <Name>password</Name>
        <Type>password</Type>
        <Label>Password</Label>
        <Help>Password to Connect to Server</Help>
        <FieldLength>32</FieldLength>
        <DefaultValue></DefaultValue>
      </Item>

      <Item>
        <Name>port</Name>
        <Type>integer</Type>
        <Label>Port</Label>
        <Help>Port for the Server</Help>
        <FieldLength>8</FieldLength>
        <DefaultValue>5900</DefaultValue>
        <Validation>
           <Type>range</Type>
           <Min>0</Min>
           <Max>65535</Max>
        </Validation>
      </Item>

      <Item>
        <Name>offset_x</Name>
        <Type>integer</Type>
        <Label>XOffset</Label>
        <Help>X Mouse Offset</Help>
        <FieldLength>8</FieldLength>
        <DefaultValue>0</DefaultValue>
        <Validation>
           <Type>range</Type>
           <Min>-65535</Min>
           <Max>65535</Max>
        </Validation>
      </Item>
      
      <Item>
        <Name>offset_y</Name>
        <Type>integer</Type>
        <Label>YOffset</Label>
        <Help>Y Mouse Offset</Help>
        <FieldLength>8</FieldLength>
        <DefaultValue>0</DefaultValue>
        <Validation>
           <Type>range</Type>
           <Min>-65535</Min>
           <Max>65535</Max>
        </Validation>
      </Item>
      
   </Items>
</Menu>
