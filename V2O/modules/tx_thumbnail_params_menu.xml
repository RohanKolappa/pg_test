<Menu>
   <Type>config</Type>
   <Title>TxThumbnailParameters</Title>
   <Description>Encoder Thumbnail Parameters</Description>
   <Access>tx_thumbnail_parm</Access>
   <ConfigFile>txthumbnailconf</ConfigFile>
   <BoardAccess>true</BoardAccess>

   <Items>

      <Item>
        <Name>enable</Name>
        <Type>boolean</Type>
        <Label>Enable</Label>
        <Help>Enables or disables thumbnail creation.</Help>
        <FieldLength>4</FieldLength>
        <DefaultValue>Yes</DefaultValue>
      </Item>

      <Item>
        <Name>enable_native</Name>
        <Type>boolean</Type>
        <Label>Enable Native</Label>
        <Help>To create native thumbnail select Yes otherwise No</Help>
        <FieldLength>4</FieldLength>
        <DefaultValue>No</DefaultValue>
      </Item>

      <Item>
        <Name>enable_large_thumbnail</Name>
        <Type>boolean</Type>
        <Label>Enable Large Thumbnail</Label>
        <Help>To create large thumbnail select Yes otherwise No</Help>
        <FieldLength>4</FieldLength>
        <DefaultValue>Yes</DefaultValue>
      </Item>

      <Item>
        <Name>enable_small_thumbnail</Name>
        <Type>boolean</Type>
        <Label>Enable Small Thumbnail</Label>
        <Help>To create small thumbnail select Yes otherwise No</Help>
        <FieldLength>4</FieldLength>
        <DefaultValue>Yes</DefaultValue>
      </Item>

      <Item>
        <Name>large_thumbnail_width</Name>
        <Type>integer</Type>
        <Label>Large Thumbnail Width</Label>
        <Help>Enter valid large thumbnail width</Help>
        <FieldLength>5</FieldLength>
        <DefaultValue>640</DefaultValue>
        <Validation>
           <Type>range</Type>
           <Min>10</Min>
           <Max>6000</Max>
        </Validation>
      </Item>

      <Item>
        <Name>large_thumbnail_height</Name>
        <Type>integer</Type>
        <Label>Large Thumbnail Height</Label>
        <Help>Enter valid large thumbnail height</Help>
        <FieldLength>5</FieldLength>
        <DefaultValue>320</DefaultValue>
        <Validation>
           <Type>range</Type>
           <Min>10</Min>
           <Max>6000</Max>
        </Validation>
      </Item>

     <Item>
        <Name>small_thumbnail_width</Name>
        <Type>integer</Type>
        <Label>Small Thumbnail Width</Label>
        <Help>Enter valid small thumbnail width</Help>
        <FieldLength>5</FieldLength>
        <DefaultValue>160</DefaultValue>
        <Validation>
           <Type>range</Type>
           <Min>10</Min>
           <Max>6000</Max>
        </Validation>
      </Item>

     <Item>
        <Name>small_thumbnail_height</Name>
        <Type>integer</Type>
        <Label>Small Thumbnail Height</Label>
        <Help>Enter valid small thumbnail height</Help>
        <FieldLength>5</FieldLength>
        <DefaultValue>160</DefaultValue>
        <Validation>
           <Type>range</Type>
           <Min>10</Min>
           <Max>6000</Max>
        </Validation>
      </Item>

     <Item>
        <Name>thumbnail_interval</Name>
        <Type>integer</Type>
        <Label>Thumbnail Interval</Label>
        <Help>Enter valid thumbnail interval in seconds</Help>
        <FieldLength>5</FieldLength>
        <DefaultValue>4</DefaultValue>
        <Validation>
           <Type>range</Type>
           <Min>1</Min>
           <Max>60</Max>
        </Validation>
      </Item>

   </Items>
</Menu>
